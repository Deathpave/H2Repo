<UserControl x:Class="WPFUI.UserControls.UEndScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Background="SkyBlue">
        <Label Content="The knave is!" HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" Margin="0,80,0,0"></Label>
        <Label Name="lblLostPlayer" Content="" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Margin="0,10,0,0"></Label>
        <Button Height="25" Width="150" Content="New Game" Margin="0,50,0,0" Name="btnNewGame" Click="btnNewGame_Click"></Button>
        <Button Height="25" Width="150" Content="Exit" Margin="0,25,0,0" Name="btnExit" Click="btnExit_Click"></Button>
    </StackPanel>

</UserControl>
