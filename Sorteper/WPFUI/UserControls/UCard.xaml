<UserControl x:Class="WPFUI.UserControls.UCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Orientation="Vertical" Name="CardBoardStack" Background="White">
        <TextBlock Text="Select a card" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"></TextBlock>
        <StackPanel Orientation="Horizontal" Name="CardsStack">
        </StackPanel>
    </StackPanel>
</UserControl>
