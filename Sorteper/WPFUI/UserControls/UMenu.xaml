<UserControl x:Class="WPFUI.UserControls.UMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="LightSkyBlue">
        <Label HorizontalAlignment="Center" Margin="0,75,0,0" FontSize="25" FontWeight="Bold">Main Menu</Label>
        <Button Width="200" Content="New game" Name="btnNewGame" Margin="0,100,0,0" Background="AliceBlue" Click="btnNewGame_Click"></Button>
        <Button Width="200" Content="Tutorial" Name="btnTutorial" Margin="0,25,0,0" Background="AliceBlue" Click="btnTutorial_Click"></Button>
        <Button Width="200" Content="Exit" Name="btnExit" Margin="0,25,0,0" Background="AliceBlue" Click="btnExit_Click"></Button>
    </StackPanel>
</UserControl>
