<UserControl x:Class="WPFUI.UserControls.USetup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="LightSkyBlue">
        <Label Content="Insert number of players below" HorizontalAlignment="Center" Name="lblNumber" Margin="0,10,0,0"></Label>
        <TextBox HorizontalAlignment="Center" Width="150" Margin="0,10,0,0" Name="txtboxNumber" KeyDown="txtboxNumber_KeyDown"></TextBox>
        <Button x:Name="btnNext" Content="Confirm" Width="150" Margin="0,10,0,0" Click="btnNext_Click"></Button>
        <Label Content="Insert player name below" HorizontalAlignment="Center" Margin="0,10,0,0" Name="lblPlayerName" Visibility="Hidden"></Label>
        <TextBox x:Name="txtboxPlayername" HorizontalAlignment="Center" Width="150" Margin="0,10,0,0" Visibility="Hidden" KeyDown="txtboxPlayername_KeyDown"></TextBox>
        <Button x:Name="btnPlayerNext" Content="Confirm" Width="150" Margin="0,10,0,0" Click="btnPlayerNext_Click" Visibility="Hidden"></Button>
    </StackPanel>
</UserControl>
