<UserControl x:Class="WPFUI.UserControls.UGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <StackPanel Background="LightSkyBlue">
        <ContentControl x:Name="ContentController" Height="340">
        </ContentControl>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
            <!--Shows picture-->
            <Image Source="" Name="ImgPlayerLogo" Margin="0,10,0,0" Height="50" Width="50"/>
            <!--Shows player info-->
            <StackPanel Orientation="Vertical">
                <TextBlock Name="TxtPlayerName" Text="test playername" Margin="0,10,0,0"></TextBlock>
                <TextBlock Name="TxtPlayerCardAmout" Text="test playercard amount" Margin="0,5,0,0"></TextBlock>
            </StackPanel>
            <StackPanel Margin="20,0,0,0" Name="stackPlayerCards" Orientation="Horizontal" Width="600">
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
